{
  "compilerOptions": {
    "target": "es5",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "noEmit": true,
    "jsx": "react",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "outDir": "./dist",
    "lib": ["es2015", "dom"],
    "types": [],
    "baseUrl": "./src",
    "paths": {
      "*": ["ts/*", "ts/client/*", "ts/server/*"]
    }
  },
  "include": ["src"]
}

